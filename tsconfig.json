{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "typings"
  ],
  "exclude": ["node_modules", "dist"]
}
